@model Film.Models.Movie
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
        <h2>@Html.ActionLink(Model.Name, "Details", "Home", new { id = Model.Id }, null)</h2>
            </div>
        <div class="panel-body">
            <div class="col-sm-4">
                @if (Model.Image != null)
    {
            @Html.Raw(String.Format("<img style='width:{0}px;float:left; height:{1}px;' src=\"data:image/png;base64,"
                                       + Convert.ToBase64String(Model.Image) + "\" />", 200, 300))

}

                @if (Model.Image == null)
    {

            <div class="user-photo"></div>
}
            </div>
            <div class="col-sm-8">
        Жанр:
        @foreach (var c in Model.Categories)
        {
            @c.Category.Name<text>,</text>
        }.
        <br>
        @Html.DisplayFor(modelItem => Model.Description)
        <div class="bottom-align-text">@Html.ActionLink("Видалити", "Delete", new { id = Model.Id })</div>
        <div class="bottom-align-left-text">@Html.ActionLink("Редагувати", "Edit", new { id = Model.Id })</div>
            </div>
            </div>
        </div>
    </div>
       

    <br />
